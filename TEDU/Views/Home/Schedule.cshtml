
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Bộ lọc tìm kiếm -->
        <div class="fw-semibold col-lg-3">
            <div class="filter-section p-3 bg-white shadow rounded s">
                <h4 style="color: #00b98e;">BỘ LỌC TÌM KIẾM</h4>
                <hr>
                <h6>Giờ đi</h6>
                <form>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="time1">
                        <label class="form-check-label" for="time1">Sáng sớm 00:00 - 06:00</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="time2">
                        <label class="form-check-label" for="time2">Buổi sáng 06:00 - 12:00</label>
                    </div>
                    <!-- Các tùy chọn khác -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="time2">
                        <label class="form-check-label" for="time2">Buổi chiều 12:00 - 18:00</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="time2">
                        <label class="form-check-label" for="time2">Buổi tối 18:00 - 24:00</label>
                    </div>
                </form>

                <h6 class="mt-4">Loại xe</h6>
                <div class="btn-group d-flex flex-wrap" role="group">
                    <button type="button" class="btn btn-outline-success rounded m-1">Ghế</button>
                    <button type="button" class="btn btn-outline-success rounded m-1">Giường</button>
                    <button type="button" class="btn btn-outline-success rounded m-1">Limousine</button>
                </div>
                <h6 class="mt-4">Hàng ghế</h6>
                <div class="btn-group d-flex flex-wrap" role="group">
                    <button type="button" class="btn btn-outline-success rounded m-1">Hàng đầu</button>
                    <button type="button" class="btn btn-outline-success rounded m-1">Hàng giữa</button>
                    <button type="button" class="btn btn-outline-success rounded m-1">Hàng cuối</button>
                </div>
                <h6 class="mt-4">Tầng</h6>
                <div class="btn-group d-flex flex-wrap" role="group">
                    <button type="button" class="btn btn-outline-success rounded m-1">Tầng trên</button>
                    <button type="button" class="btn btn-outline-success rounded m-1">Tầng dưới</button>
                </div>
            </div>
        </div>

        <!-- Danh sách lịch trình -->
        <div class="fw-semibold col-lg-9">
            <div class="schedule-section p-3 bg-white shadow rounded">
                <h4 style="color: #00b98e;" class="mb-4">An Nhơn - TP. Hồ Chí Minh</h4>
                <div class="schedule-item shadow">
                    <div class="row">
                        <div class="d-flex col-md-8 flex-row bd-highlight mb-3 justify-content-start align-items-center">
                            <div class="p-2 bd-highlight">
                                <span class="schedule-header fs-4">16:45</span>
                                <!-- <p class="fs-6 mb-0">Bến Xe An Nhơn, Bình Định</p>  -->
                            </div>
                            <div class="p-2 bd-highlight">
                                <span class="separator-text">

                                    <i class="fa-solid fa-circle-dot"></i>
                                    .............................. 14 giờ ..............................
                                    <i class="fa-solid fa-location-dot"></i>
                                </span>
                            </div>
                            <div class="p-2 bd-highlight">
                                <span class="fs-4 schedule-header">06:45</span>
                            </div>
                        </div>
                        <div class="d-flex col-md-4 flex-row mb-3 align-items-center justify-content-end">
                            <div class="p-1 bd-highlight">
                                <i class="fa-solid fa-bus"></i>
                                <span>Limousine</span>
                            </div>
                            <div class="p-1 bd-highlight">
                                <i class="fa-solid fa-couch"></i>
                                <span>22 chỗ trống</span>
                            </div>
                        </div>
                    </div>

                    <div class="row pt-0">
                        <div class="col-md-4 pt-0 trinh">
                            <p class="fs-6 mb-0">Bến Xe An Nhơn, Bình Định</p>
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-4">
                            <p class="fs-6 mb-0 trinh">Bến Xe miền Tây</p>
                        </div>
                    </div>

                    <div class="row trinh2">
                        <div class="col-md-8">
                            <p class="warning-note">Lưu ý: Tuyến xe có lộ trình đi Cao Tốc Long Thành - Dầu Giây - Phan Thiết</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <p class="price fs-5">340.000đ</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class=" col-md-8 schedule-links d-flex justify-content-start align-items-center">
                            <div class="px-2 bd-highlight"><a href="#">Chọn ghế</a></div>
                            <div class="p-2 bd-highlight"><a href="#">Lịch trình</a></div>
                            <div class="p-2 bd-highlight"><a href="#">Trung chuyển</a></div>
                            <div class="p-2 bd-highlight"><a href="#">Chính sách</a></div>
                        </div>
                        <div class="col-md-1 schedule-links"></div>
                        <div class="col-md-3 schedule-links text end">
                            <button class="btn btn-book text-end rounded-pill ms-3">Chọn chuyến</button>
                        </div>
                    </div>
                </div>
                <div><br></div>
                <div class="schedule-item shadow ">
                    <div class="row">
                        <div class="d-flex col-md-8 flex-row bd-highlight mb-3 justify-content-start align-items-center">
