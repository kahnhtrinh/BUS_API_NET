@using TEDU.Areas.Admin.Models

<div class="d-flex justify-content-end mb-4">
    <a href="@Url.Action("Create", "News")" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-100">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Thêm tin tức mới</span>
    </a>
</div>
    @{
        int index = 0;
        foreach (var data in ViewBag.Data as List<News>)
        {
            var collapseId = $"collapseCardExample{index}";
            <div class="card shadow mb-4">
                <!-- Card Header - Accordion -->
                <a href="#@collapseId" class="d-block card-header py-3" data-toggle="collapse"
                   role="button" aria-expanded="true" aria-controls="@collapseId">
                    <h6 class="m-0 font-weight-bold text-primary">@data.Title</h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse" id="@collapseId">
                    <div class="card-body">
                        @data.Content
                        <br />
                        <i>Thời gian: </i> <strong>@data.PublishedDate</strong>
                        <!-- Nút chỉnh sửa -->
                        <div class="mt-3">
                            <a href="@Url.Action("Edit", "News")" class="btn btn-outline-success">
                                Chỉnh sửa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            index++;
        }
    }